#-------------------------------------------------------------------------------
# 1. Some general stuff
#-------------------------------------------------------------------------------

alias a=alias
alias u=unalias

#-------------------------------------------------------------------------------
# 2. Directory maintanance
#-------------------------------------------------------------------------------

alias md=mkdir
alias rd=rmdir

alias home='cd $HOME'
alias ..=' cd ..'
alias up=' cd ..'
alias ,=' cd $OLDPWD'
alias down=' cd $OLDPWD'

alias ll='ls -l'
alias la='ls -a'
alias lal='ls -al'
alias lla='ls -la'
alias dir='ls -l'

alias x='chmod a+x'

#-------------------------------------------------------------------------------
# 3. Command history
#-------------------------------------------------------------------------------

alias h='history | less'
alias r='fc -s'

#-------------------------------------------------------------------------------
# 4. Job control
#-------------------------------------------------------------------------------

alias j='jobs -l'

psg(){
   ps aux | grep $* | grep -v grep 
}

#-------------------------------------------------------------------------------
# 5. Logging out and exiting
#-------------------------------------------------------------------------------

alias lo='logout'
alias quit='exit'
alias bye='exit'
alias adios='exit'
alias ciao='exit'

#-------------------------------------------------------------------------------
# 6. Resizing xterms
#-------------------------------------------------------------------------------

alias rs='eval `resize`'

#-------------------------------------------------------------------------------
# 7. Other useful aliases for programs and typos
#-------------------------------------------------------------------------------

alias mkae='make'
alias more=less
alias m='less -MMI'
alias llt='ls -lart'
